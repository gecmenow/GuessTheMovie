@model PagedList.IPagedList<GuessTheMovie.Models.ViewModels.FilmsVM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="film-new">
    @Html.ActionLink("Update DataBase", "Update")
</p>
 
<table class="table film-table">
    @foreach (var films in Model)
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => films.FilmCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => films.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => films.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => films.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => films.Image)
            </th>
            <th></th>
        </tr>
        break;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FilmCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id = item.FilmId  }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
}

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))