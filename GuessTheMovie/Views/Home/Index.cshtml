@model PagedList.IPagedList<GuessTheMovie.Models.ViewModels.AdminFilmsVM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

    <div class="wrapper">
        <h2>Index</h2>

        <p class="film-new btn btn-updat-films-dtb">
            @Html.ActionLink("Update DataBase", "Update")
        </p>

        <table class="table film-table">
            @foreach (var films in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => films.FilmCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.ImageCount)
                    </th>
                    <th></th>
                </tr>
                break;
            }
            @if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.FilmCode)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Name)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Year)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.ImageCount)
                        </th>
                        <th>
                            @Html.ActionLink("Edit", "Edit", new { id = item.FilmId}, new {@class = "bnt btn-edit"}) |  
                            @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */ }, new {@class = "bnt btn-delete"})
                        </th>
                    </tr>
                }
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
