@model PagedList.IPagedList<GuessTheMovie.Models.ViewModels.AdminFilmsVM>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}
<div class="wrapper">
    <h2><a href="/">Index</a></h2>
    <p class="film-new btn btn-updat-films-dtb">
        @Html.ActionLink("Update DataBase", "Update")
    </p>
    <br />
    <input type="text" name="name" id="search" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Home")' />
    @*<input type="text" name="name" id="search" />*@
    <input type='button' id="submit" value='Поиск' />

    <div id="result">
        <table class="table film-table">
            @foreach (var films in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => films.FilmId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.FilmCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => films.ImageCount)
                    </th>
                    <th></th>
                </tr>
                break;
            }
            @if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.FilmId)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.FilmCode)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Name)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Year)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.ImageCount)
                        </th>
                        <th>
                            @Html.ActionLink("Edit", "Edit", new { id = item.FilmId }, new { @class = "bnt btn-edit" }) |
                            <button type="button" class="btn btn-danger RemoveLink" data-id="@item.FilmId" data-page="@Model.PageNumber"><i class="fas fa-trash-alt"></i></button>
                        </th>
                    </tr>
                }
            }
        </table>
    </div>
</div>


@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

<script src='@Url.Content("~/Scripts/jquery-3.4.1.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $(".RemoveLink").click(function (e) {
            e.preventDefault();
            var id = $(this).attr("data-id");
            var page = $(this).attr("data-page");
            url = "@Url.Action("Delete", "Home")?id=" + id + "&page=" + page;
            $('#result').load(url);
        });

        $('#submit').click(function (e) {
            e.preventDefault();
            var name = $('#search').val();
            name = encodeURIComponent(name);
            url = "@Url.Action("FilmSearch", "Home")?name=" + name;
            $('#result').load(url);
        });
    })
</script>

<script type="text/javascript">
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
        });
    });
</script>
